    "life": {
      "name": "Life Shayari",
      "hindiName": "Life Shayari",
      "description": "Reflections on the journey of life through poetic verses",
      "bgGradient": "from-green-50 via-teal-50 to-emerald-50",
      "primaryColor": "green",
      "secondaryColor": "teal",
      "emojis": ["🌱", "🌍", "🌞", "🌻", "🌊", "🍃", "🕊️", "🌄", "🌌", "🪴"],
      "backgroundTexts": ["Life", "Journey", "Time", "Experience", "Wisdom", "Destiny"],
      "subcategories": [
        {
          "name": "All",
          "color": "from-green-500 to-teal-500"
        },
        {
          "name": "Philosophical",
