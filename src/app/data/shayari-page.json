      "shayaris": [
        {
          "id": 1,
          "text": "I live only through memories of you,\nWithout you, what would I even do?\nEvery heartbeat whispers your name,\nWithout you, I'm incomplete, that's my pain.",
          "author": "Amit Sharma",
          "category": "Romantic",
          "likes": 2450,
          "views": 8920,
          "shares": 340,
          "image": "https://images.unsplash.com/photo-1518709268805-4e9042af2176?w=400&h=300&fit=crop",
